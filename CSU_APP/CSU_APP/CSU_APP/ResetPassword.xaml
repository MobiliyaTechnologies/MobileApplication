<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CSU_APP.ResetPassword">

  <ContentPage.Content>
    <StackLayout Spacing="20" Padding="40"
                         >
      <Label Text="Reset Password"/>
      <Entry Placeholder="Current password"
                     Text="{Binding currentPassword}"
                     IsPassword="true" x:Name="currentPassword"/>

      <Entry Placeholder="enter new password"
             Text="{Binding newPassword}"
  IsPassword="true"
  x:Name="newPassword"/>

      <Entry Placeholder="Confirm password"
             Text="{Binding confirmPassword}"
             IsPassword="true" x:Name="confirmPassword"/>
      <Button Text="Reset" TextColor="White" x:Name="performReset"
              BackgroundColor="#77D065"
                       />

      <ActivityIndicator
                           IsVisible="{Binding IsBusy}"
                           IsRunning="{Binding IsBusy}"
                           Color="Black" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>